<% title t('.page_title') %>
<% decision_step_header %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-panel govuk-panel--confirmation">
      <h1 class="govuk-panel__title">
        <%= t('.panel_heading')%>
      </h1>
      <div class="govuk-panel__body">
        <%= t('.panel_text')%><br><strong><%= @laa_reference %></strong>
      </div>
    </div>

    <div class="govuk-!-margin-top-4 govuk-!-margin-bottom-6">
      <p class="govuk-body"><%= t('.confirmation_email_sent') %></p>
      <h2 class="govuk-heading-m"><%= t('.next_steps.title') %></h2>
      <p class="govuk-body"><%= t('.next_steps.process_1') %></p>
      <div><%= t('.next_steps.process_2_html') %></div>
      <div>
        <h2 class='govuk-heading-s'><%= t('.next_steps.print_instructions.heading') %></h2>
        <p class="govuk-body"><%= t('.next_steps.print_instructions.content') %></p>
      </div>
      <p class="govuk-body">
        <%= govuk_link_to(t('.feedback.link_text'), Rails.configuration.x.nsm.feedback_url) %> (<%= t('.feedback.description') %>)
      </p>
    </div>

    <div class="govuk-button-group confirmation-button-group">
      <%= link_button t('helpers.view_claims'), nsm_applications_path, class: 'govuk-button' %>
      <%= button_to nsm_applications_path, class: "govuk-button govuk-button--secondary" do %>
        <%= t('helpers.start_new_claim')%>
      <% end %>
    </div>
  </div>
</div>
