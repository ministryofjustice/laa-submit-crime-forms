<% title t('.page_title') %>
<% decision_step_header(path: nsm_steps_view_claim_path(current_application.id, section: params.fetch(:section, 'claimed_costs'), anchor: 'letters-and-calls-tab')) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= t('.heading') %></h1>

    <%=
      if @claim.calls_adjustment_comment
        rows = [
          [{ text: t(".allowed_number"), width: 'govuk-!-width-one-half' }, (@claim.allowed_calls || @claim.calls).to_s],
          [t(".allowed_uplift"), NumberTo.percentage((@claim.allowed_calls_uplift || @claim.calls_uplift).to_f, multiplier: 1)],
          [t(".allowed_net_cost"), NumberTo.pounds(@claim.allowed_calls_after_uplift)],
          [t(".adjustment_comment"), @claim.calls_adjustment_comment]
        ]

        govuk_table do |table|
          table.with_caption(text: t('.adjusted'))
          table.with_body(rows: rows)
        end
      end
    %>
    <%=
      rows = [
        [{ text: t(".rate"), width: 'govuk-!-width-one-half' }, NumberTo.pounds(@claim.pricing.calls)],
        [t(".number"), @claim.calls.to_s],
        [t(".uplift"), NumberTo.percentage(@claim.calls_uplift.to_f, multiplier: 1)],
        [t(".net_cost"), NumberTo.pounds(@claim.calls_after_uplift)]
      ]

      govuk_table do |table|
        table.with_caption(text: t('.your_costs'))
        table.with_body(rows: rows)
      end
    %>
  </div>
</div>
