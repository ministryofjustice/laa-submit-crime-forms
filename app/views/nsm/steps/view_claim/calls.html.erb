<% title t('.page_title') %>
<% decision_step_header(path: :back) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= t('.heading') %></h1>

    <%=
      if claim.calls_adjustment_comment
        rows = [
          [{ text: t(".allowed_number"), width: 'govuk-!-width-one-half' }, (claim.assessed_calls).to_s],
          [t(".allowed_uplift"), LaaCrimeFormsCommon::NumberTo.percentage((claim.assessed_calls_uplift).to_f, multiplier: 1)],
          [t(".allowed_net_cost"), LaaCrimeFormsCommon::NumberTo.pounds(claim.allowed_calls_after_uplift)],
          [t(".adjustment_comment"), claim.calls_adjustment_comment]
        ]

        govuk_table do |table|
          table.with_caption(text: t('.adjusted'))
          table.with_body(rows: rows)
        end
      end
    %>
    <%=
      rows = [
        [{ text: t(".rate"), width: 'govuk-!-width-one-half' }, LaaCrimeFormsCommon::NumberTo.pounds(claim.call_rate)],
        [t(".number"), claim.calls.to_s],
        [t(".uplift"), LaaCrimeFormsCommon::NumberTo.percentage(claim.calls_uplift.to_f, multiplier: 1)],
        [t(".net_cost"), LaaCrimeFormsCommon::NumberTo.pounds(claim.calls_after_uplift)]
      ]

      govuk_table do |table|
        table.with_caption(text: t('.your_costs'))
        table.with_body(rows: rows)
      end
    %>
  </div>
</div>
