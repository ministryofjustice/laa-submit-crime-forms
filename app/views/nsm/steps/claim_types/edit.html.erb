<% title t('.page_title') %>
<% step_header(path: nsm_applications_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= govuk_error_summary(@form_object) %>
    <h1 class="govuk-heading-xl"><%= t('.heading') %></h1>
    <%= step_form @form_object do |f| %>
      <%= f.govuk_radio_buttons_fieldset :claim_type, legend: nil do %>
        <%= f.govuk_radio_button :claim_type, ClaimType::NON_STANDARD_MAGISTRATE.value, label: { text: t('laa_crime_forms_common.nsm.claim_type.non_standard_magistrate' ) } %>
        <%= f.govuk_radio_button :claim_type, ClaimType::BREACH_OF_INJUNCTION.value, label: { text: t('laa_crime_forms_common.nsm.claim_type.breach_of_injunction' ) } %>
        <%= f.govuk_radio_button :claim_type, ClaimType::SUPPLEMENTAL.value, label: { text: t('laa_crime_forms_common.nsm.claim_type.supplemental' ) } %>
      <% end %>
      <%= f.continue_button(secondary: false) %>
    <% end %>
  </div>
</div>
