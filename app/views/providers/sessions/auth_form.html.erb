<% title t('.page_title') %>


<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
          <%= t('.page_title') %>
      </h1>

      <p>
          <%= t('.content') %>
      </p>

      <form id="auth-form" action="<%= provider_entra_id_omniauth_authorize_path %>" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <% if @login_hint.present? %>
              <%= hidden_field_tag :login_hint, @login_hint %>
          <% end %>
          <% if @prompt.present? %>
              <%= hidden_field_tag :prompt, @prompt %>
          <% end %>
          <input type="submit" id="auto-submit" class="govuk-button" style="display: none;" />
      </form>
  </div>
</div>

<script nonce="<%= content_security_policy_nonce %>">
  document.getElementById('auto-submit').click();
</script>
