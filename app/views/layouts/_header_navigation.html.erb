<nav aria-label="<%= t('.nav_aria_label') %>" class="moj-header__navigation">
  <% if current_provider %>
    <button type="button" class="moj-header__menu-button moj-js-header-toggle" aria-controls="navigation" aria-label="<%= t('.button_aria_label') %>" hidden>
      <%= t('.menu_button') %>
    </button>
    <ul id="navigation" class="moj-header__navigation-list app-header-menu-hidden-on-load">
      <li class="moj-header__navigation-item app-header__auth-user">
        <%= current_provider.display_name %>
      </li>

      <li class="moj-header__navigation-item header-navigation-link">
        <%# Signing out will reset the session ID which will reset the CSP nonce token, so turbo-based page replacement
          will fail as inline scripts will no longer have a valid nonce %>
        <%= govuk_link_to t('.sign_out'), main_app.providers_logout_path, class: 'moj-header__link govuk-!-font-weight-bold' %>
      </li>
    </ul>
  <% end %>
</nav>
