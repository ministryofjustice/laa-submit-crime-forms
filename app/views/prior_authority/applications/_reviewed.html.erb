<% title t('.page_title') %>

<% if @model.none? %>
  <p><%= t('prior_authority.applications.tabs.no_reviewed') %></p>
<% else %>
  <h2 class="govuk-heading-m"><%= t('prior_authority.applications.tabs.reviewed') %></h2>
  <div class="moj-scrollable-pane">
    <%= render 'generic_table',
              described_by: :tab_reviewed,
              params: { controller: 'prior_authority/applications', action: 'index' },
              pagy: pagy,
              model: model,
              sort_by: @sort_by,
              sort_direction: @sort_direction %>
  </div>
<% end %>
