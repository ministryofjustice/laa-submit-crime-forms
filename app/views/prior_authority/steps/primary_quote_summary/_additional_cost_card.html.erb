<div id="additional-cost-summary" class="govuk-summary-card">
  <div class="govuk-summary-card__title-wrapper">
    <h2 class="govuk-summary-card__title"><%= t('.additional_costs') %></h2>
    <ul class="govuk-summary-card__actions">
      <li class="govuk-summary-card__action">
        <% if form.additional_costs.any? %>
          <%= govuk_link_to(t('.change'), edit_prior_authority_steps_additional_costs_path(current_application)) %>
        <% else %>
          <%= govuk_link_to(t('.change'), new_prior_authority_steps_additional_cost_detail_path(current_application)) %>
        <% end %>
        <span class="govuk-visually-hidden"> (<%= t('.additional_costs') %>)</span>
      </li>
    </ul>
  </div>
  <div class="govuk-summary-card__content">
    <% if form.valid? %>
      <table class="govuk-table">
        <caption class="govuk-table__caption govuk-visually-hidden">
          <%= t('.additional_costs') %>
        </caption>
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header"><%= t('.cost') %></th>
            <th scope="col" class="govuk-table__header"><%= t('.total') %></th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">
          <% form.additional_costs.each do |cost| %>
            <tr class="govuk-table__row">
              <td class="govuk-table__cell"><%= cost.name %></td>
              <td class="govuk-table__cell"><%= cost.formatted_total_cost %></td>
            </tr>
          <% end %>
          <tr class="govuk-table__row">
            <td class="govuk-table__cell govuk-table__header"><%= t('.total') %></td>
            <td class="govuk-table__cell govuk-table__header"><%= NumberTo.pounds(form.total_cost) %></td>
          </tr>
        </tbody>
      </table>
    <% else %>
      <p><%= t('.none_added') %>
    <% end %>
  </div>
</div>
